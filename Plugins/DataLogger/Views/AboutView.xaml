             xmlns:data="clr-namespace:LynLogger.Data"
             xmlns:converters="clr-namespace:LynLogger.Views.Converters"
             x:Class="LynLogger.Views.AboutView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:MultiBindingEqualityConverter x:Key="MultiBindingEqualityConverter" />
