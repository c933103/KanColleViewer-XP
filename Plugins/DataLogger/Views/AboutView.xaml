            <Run.Style>
                <Style TargetType="{x:Type Run}">
                    <Style.Triggers>
                        <DataTrigger Value="False">
                            <DataTrigger.Binding>
                                <MultiBinding Converter="{StaticResource MultiBindingEqualityConverter}">
                                    <Binding Source="{x:Static plugin:LynLoggerMain.Version}" Mode="OneTime" />
                                    <Binding Source="{x:Static plugin:LynLoggerMain.Instance}" Path="UpdateVersion" Mode="OneWay" />
                                </MultiBinding>
                            </DataTrigger.Binding>
                            <Setter Property="Background" Value="PaleGreen" />
                            <Setter Property="Foreground" Value="Black" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Run.Style>
        </Run>
